<h1>{{title}}</h1>
{{# if products }}
    <div class="cart page">
        <ul class="list-group">
            {{# each products }}
            <li class="list-group-item clearfix">
                <div class="col xs5">
                    <strong>{{ this.item.title }}</strong><br/>
                    <em>{{{this.item.description}}}</em>
                </div>
                <div class="col xs2 text-right">
                    <span class="badge">{{ this.quantity }}</span>
                </div>
                <div class="col xs3 text-right">
                    ${{ this.price }}.00
                </div>
                <div class="col xs2 text-right">
                    <a href="/remove/{{this.item.id}}" class="btn btn-default"></i> Remove</a>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        <strong>Total: ${{ totalPrice }}.00 </strong>
    </div>
    <hr>
    <div class="text-right">
        <a href="#" type="button" class="btn btn-success" id="checkoutButton">Checkout</a>
    </div>
{{ else }}
    Your shopping cart is empty.
{{/if}}
<script src="https://js.stripe.com/v3/"></script>
<script src="/scripts/checkout.js"></script>
