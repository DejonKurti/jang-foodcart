<div class="row mt-5">
  <div class="col s10 m10 l6 xl6 offset-s1 offset-m1 offset-l3 offset-xl3">
    <div class="row card">
      <div class="col s10 m10 l10 xl10 offset-s1 offset-m1 offset-l1 offset-xl1">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
      <form action="/user/login/" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        {{ error}}
        <div class="row" style="margin-top:20px;">
          <button type="submit" formmethod="post" class="waves-effect waves-light btn col s12 m12 l12 xl12">Login</button>
        </div>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/register">Register</a>
      </p>
    </div>
    </div>
  </div>
</div>